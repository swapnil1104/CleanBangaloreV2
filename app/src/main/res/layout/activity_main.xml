<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swapnil.cleanbangalore.MainActivity"
    android:background="#003366">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome "
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#cecece"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="to CleanBangalore initiative"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#cecece"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="A simple application to notify authorities about the garbage around you."
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="13dp"
        android:textColor="#cecece"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <com.example.swapnil.cleanbangalore.GifView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/gif_view"
        android:minHeight="128dp"
        android:minWidth="128dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.2" />

    <TextView
        android:text="Use the app -> Call the truck -> CleanBangalore! -> Thank You! (y)"
        android:id="@+id/MarqueeText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:textColor="#cecece"
        android:layout_below="@+id/nameText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:id="@+id/nameText"
        android:hint="Enter your name"
        android:singleLine="true"
        android:layout_below="@+id/gif_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textColor="#cecece"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/button"
        android:onClick="camAct"
        android:background="@drawable/dark_green"
        android:layout_below="@+id/nameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#cecece"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:maxHeight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="&quot;One planet, one experiment.&quot; "
        android:id="@+id/textView3"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="#cecece"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/ok"
        android:id="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:textColor="#cecece"
        android:layout_gravity="center_horizontal"
        android:textAlignment="textEnd"
        android:layout_weight="1" />

</LinearLayout>
